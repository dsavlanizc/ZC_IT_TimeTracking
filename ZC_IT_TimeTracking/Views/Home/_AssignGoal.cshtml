@model ZC_IT_TimeTracking.ViewModels.AssignGoalViewModel
@{
    ViewBag.Title = "Assign Goal";
}
<form role="form" id="GoalAssignForm" class="form-horizontal">
    <div class="form-group required">
        @Html.LabelFor(m => m.GoalTitle, new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.DropDownList("Goal_MasterID", new SelectList(ViewBag.goal, "Goal_MasterID", "GoalTitle"), "----Select GoalTitle-----", new { @class = "form-control col-md-4" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GoalDescription, new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            <textarea name="GoalDescription" id="GoalDescription" class="form-control" readonly></textarea>
        </div>
    </div>
    <div class="form-group required">
        @Html.LabelFor(m => m.Weight, new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            <input type="number" name="Weight" id="Weight" class="form-control" />
        </div>
    </div>
    <div class="form-group required">
        @Html.LabelFor(m => m.TeamName, new { @class = "col-md-3 control-label" })
        <div class="col-md-3">
            @Html.DropDownList("TeamID", new SelectList(ViewBag.Team, "TeamID", "TeamName"), "----Select Team-----", new { @class = "form-control col-md-4" })
        </div>
    </div>
    <div class="form-group required">
        @Html.Label("TeamMember", new { @class = "col-md-3 control-label" })
        <div class="col-md-3">
            <select name="TeamMember" id="TeamMember" class="form-control" multiple="multiple"></select>
        </div>
    </div>   
    <div class="form-group">
        <div class="col-md-12">
           <button type="submit" class="btn btn-primary col-md-offset-3" id="ButtonAssign">Assign</button>
            <button type="reset" class="btn btn-primary">Reset</button>
            
            <button type="button" class="btn btn-primary right" style="float:right" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");">Back</button>
           
        </div>
    </div>
</form>
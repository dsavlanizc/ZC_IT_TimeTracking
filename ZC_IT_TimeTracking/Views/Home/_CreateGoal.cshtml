@model ZC_IT_TimeTracking.ViewModels.CreateGoalViewModel
<div class="form-horizontal" id="formInput">
    <div class="form-group required">      
        @Html.LabelFor(m => m.GoalTitle, new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.GoalTitle, new { @class = "form-control", required = "required" })
        </div>
    </div>
    <div class="form-group required">
       @Html.LabelFor(m => m.GoalDescription, new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.TextAreaFor(m => m.GoalDescription, new { @class = "form-control", required = "required" })
        </div>
    </div>
    <div class="form-group required">
        <label class="control-label col-md-3">Year</label>
        <div class="col-md-3">
            <select name="GoalYear" id="GoalYear" class="form-control">
                <option id="@ViewBag.Year">@ViewBag.Year</option>
            </select>
        </div>
    </div>
    <div class="form-group required">
        <label class="control-label col-md-3">Quarter</label>
        <div class="col-md-3">
            <select name="GoalQuarter" id="GoalQuarter" class="form-control">
                <option id="@ViewBag.Quarter">@ViewBag.Quarter</option>
            </select>
        </div>
    </div>
    <div class="form-group required">
        @Html.LabelFor(m => m.UnitOfMeasurement, new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.UnitOfMeasurement, new { @class = "form-control", required = "required" })
        </div>
    </div>
    <div class="form-group required">
        @Html.LabelFor(m => m.MeasurementValue, new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.MeasurementValue, new { @class = "form-control", required = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IsHigherValueGood, new { @class = "col-md-3 control-label" })
        <div class="col-md-1 col-md-offset-1" >
            @Html.CheckBoxFor(m => m.IsHigherValueGood, new { @class = "checkbox" })
        </div>
    </div>
</div>
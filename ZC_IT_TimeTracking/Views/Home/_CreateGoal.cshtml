<div class="form-horizontal" id="formInput">
    <div class="form-group required">
        <label class="col-md-3 control-label">Title</label>
        <div class="col-md-4">
            <input type="text" name="GoalTitle" id="GoalTitle" class="form-control" />
        </div>
    </div>
    <div class="form-group required">
        <label class="control-label col-md-3">Description</label>
        <div class="col-md-4">
            <textarea name="GoalDescription" id="GoalDescription" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group required">
        <label class="control-label col-md-3">Year</label>
        <div class="col-md-3">
            <select name="GoalYear" id="GoalYear" class="form-control">
                <option id="@ViewBag.Year">@ViewBag.Year</option>
            </select>
        </div>
    </div>
    <div class="form-group required">
        <label class="control-label col-md-3">Quarter</label>
        <div class="col-md-3">
            <select name="GoalQuarter" id="GoalQuarter" class="form-control">
                <option id="@ViewBag.Quarter">@ViewBag.Quarter</option>
            </select>
        </div>
    </div>
    <div class="form-group required">
        <label class="control-label col-md-3">Unit of Measurement</label>
        <div class="col-md-4">
            <input name="GoalUnit" id="GoalUnit" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group required">
        <label class="control-label col-md-3">Measurement Value</label>
        <div class="col-md-4">
            <input name="GoalUnitValue" id="GoalUnitValue" type="number" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3">Is Higher Value Appreciable?</label>
        <div class="col-md-2">
            <input name="IsHigherValue" id="IsHigherValue" type="checkbox" class="checkbox" />
        </div>
    </div>
</div>
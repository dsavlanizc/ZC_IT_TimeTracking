@{
    ViewBag.Title = "Assigned Goals";
}

<div class="row">
    <h3>Goal Assigned To Resource</h3>
    <br />
    <div class="form-inline">
        <div class="form-group">
            <label class="col-md-3 control-label">Team</label>
            <div class="col-md-3">
                @Html.DropDownList("TeamName", new SelectList(ViewBag.Team, "TeamID", "TeamName"), "----Select Team-----", new { @class = "form-control col-md-4", @id="TeamName"})
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Resources</label>
            <div class="col-md-3">
                <select name="TeamMemberName" id="TeamMemberName" class="form-control col-md-4">
                    <option value="">--Select TeamMember--</option>
                </select>
            </div>
        </div>
        @*<div class="form-group">
                <label class="col-md-1 control-label">Resources</label>
                <div class="col-md-3">
                    @Html.DropDownList("ResourceID", new SelectList(ViewBag.Resource, "ResourceID", "Name"), "----Select Resource-----", new { @class = "form-control col-md-4" })
                </div>
            </div>*@
        <div class="form-group">
            <form role="form" class="form-inline" method="post">
                <input type="hidden" id="ResId" name="ResId" />
                <div class="col-md-3">
                    <button class="btn btn-default" type="submit" id="ButtonViewGoals">Find</button>
                </div>
            </form>
        </div>
    </div>
     
        <table class="table" id="tableGoalAssigned">
            <thead>
                <tr>
                    <th>Resource Goal Id</th>
                    <th>Goal Title</th>
                    <th>Weight</th>
                </tr>
            </thead>
            <tbody>
            @if (ViewBag.AllGoalResource != null)
            {
                foreach (var goals in ViewBag.AllGoalResource)
                {   <tr><td colspan="3"></td></tr>
                    <tr>
                        <td>@goals.Resource_GoalID</td>
                        <td>@goals.GoalTitle</td>
                        <td>@goals.Weight</td>
                    </tr>
                }


            }
            else
            {
                <tr>
                    <td colspan="3"><p class="bg-warning">Select Resource to view goals assigned</p></td>
                </tr>

            }
             </tbody>
        </table>

    
